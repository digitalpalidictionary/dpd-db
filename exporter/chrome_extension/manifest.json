{
  "manifest_version": 3,
  "name": "DPD Dictionary",
  "description": "A Chrome extension that allows you to access Digital Pāḷi Dictionary resources from any website.",
  "version": "1.0",
  "icons": {
    "16": "images/dpd-logo_16.png",
    "32": "images/dpd-logo_32.png",
    "64": "images/dpd-logo_64.png",
    "128": "images/dpd-logo_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/dpd-logo-gray_16.png",
      "32": "images/dpd-logo-gray_32.png",
      "64": "images/dpd-logo-gray_64.png",
      "128": "images/dpd-logo-gray_128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.dpdict.net/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/*.png",
        "images/*.svg",
        "css/*.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}